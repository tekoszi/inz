{% block body %}
    <h1>Users</h1>
            <div>
                <a href="{{ path('users_new') }}"><button type="button" class="btn btn-dark mb-2">Create new</button></a>
                <table class="table table-dark table-hover table-striped" id="users-table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Full_name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.fullName }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.address }}</td>
                            <td>
                                <a href="{{ path('users_show', {'id': user.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                                <a href="{{ path('users_edit', {'id': user.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>
                                {{ include('users/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
{% endblock %}
