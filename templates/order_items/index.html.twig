{% extends 'base.html.twig' %}

{% block title %}OrderItems index{% endblock %}

{% block body %}
    <h1>OrderItems index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order_id</th>
                <th>Product_id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_item in order_items %}
            <tr>
                <td>{{ order_item.id }}</td>
                <td>{{ order_item.orderId }}</td>
                <td>{{ order_item.productId }}</td>
                <td>{{ order_item.quantity }}</td>
                <td>
                    <a href="{{ path('order_items_show', {'id': order_item.id}) }}">show</a>
                    <a href="{{ path('order_items_edit', {'id': order_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_items_new') }}">Create new</a>
{% endblock %}
