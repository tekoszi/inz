{% extends 'base.html.twig' %}

{% block title %}OrderItems index{% endblock %}

{% block body %}
    <h1>OrderItems index</h1>
<div class="col-6">
    <a href="{{ path('order_items_new') }}"><button type="button" class="btn btn-dark mb-2">Create new</button></a>
    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order_id</th>
                <th>Product_id</th>
                <th>Quantity</th>
                {#<th>Product price</th>#}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_item in order_items %}
            <tr>
                <td>{{ order_item.id }}</td>
                <td>{{ order_item.orderId }}</td>
                <td>{{ order_item.productId }}</td>
                <td>{{ order_item.quantity }}</td>
                {#<td>{{ order_item.productPrice }}</td>#}
                <td>
                    <a href="{{ path('order_items_show', {'id': order_item.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                    <a href="{{ path('order_items_edit', {'id': order_item.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>
                    {{ include('order_items/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
