{% extends 'base.html.twig' %}

{% block title %}Rows index{% endblock %}

{% block body %}
    <h1>Rows index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Warehouse_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for row in rows %}
            <tr>
                <td>{{ row.id }}</td>
                <td>{{ row.warehouseId }}</td>
                <td>
                    <a href="{{ path('rows_show', {'id': row.id}) }}">show</a>
                    <a href="{{ path('rows_edit', {'id': row.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rows_new') }}">Create new</a>
{% endblock %}
