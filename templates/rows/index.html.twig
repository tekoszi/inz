{% block body %}
    <h1>Rows</h1>

    <a href="{{ path('rows_new') }}"><button type="button" class="btn btn-dark mb-2">Create new</button></a>
    <table class="table table-dark table-hover table-striped" id="rows-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Warehouse_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for row in rows %}
            <tr>
                <td>{{ row.id }}</td>
                <td>{{ row.warehouseId }}</td>
                <td>
                    <a href="{{ path('rows_show', {'id': row.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                    <a href="{{ path('rows_edit', {'id': row.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>
                    {{ include('rows/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
