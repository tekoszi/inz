{% extends 'base.html.twig' %}

{% block title %}ExternalOrders{% endblock %}




{% block body %}
    <h1>ExternalOrders</h1>
    <div class="col-4">
        <table  class="table table-dark table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ external_order.id }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ external_order.status }}</td>
                </tr>
                <tr>
                    <th>Barcode</th>
                    <td>{{ external_order.barcode }}</td>
                <tr>
                    <th>Products</th>
                    <td>{{ external_order.products|json_encode() }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ external_order.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ external_order.price }}</td>
                </tr>
                <tr>
                    <th>Customer_id</th>
                    <td>{{ external_order.customerId }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('external_orders_index') }}"><button type="button" class="ml-3 btn btn-dark mb-1">Back to list</button></a>

    {#<a href="{{ path('external_orders_edit', {'id': external_order.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>#}
    {% if not created_order %}
    <a href="{{ path('orders_index', {'id': external_order.id, 'customer_id': external_order.customerId, 'products': external_order.products}) }}"><button type="button" class="btn btn-dark mb-1">Create internal order</button></a>
    {% endif %}
    {#{{ include('external_orders/_delete_form.html.twig') }}#}
{% endblock %}
