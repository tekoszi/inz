{% block body %}
    <h1>ExternalOrders index</h1>

    <table  class="table table-dark table-hover table-striped" id="external-orders-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Barcode</th>
                <th>Status</th>
                <th>Products</th>
                <th>Name</th>
                <th>Price</th>
                <th>Customer_id</th>
                {#<th>Products</th>#}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <h5>New external orders</h5>
        {% for external_order in external_orders %}
            {% if external_order.status == 'New'%}
            <tr>
                <td>{{ external_order.id }}</td>
                <td>{{ external_order.barcode }}</td>
                <td>{{ external_order.status }}</td>
                <td>{{ external_order.products|json_encode() }}</td>
                <td>{{ external_order.name }}</td>
                <td>{{ external_order.price }}</td>
                <td>{{ external_order.customerId }}</td>
                {#<td>{{ external_order.products }}</td>#}
                <td>
                    <a href="{{ path('external_orders_show', {'id': external_order.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
