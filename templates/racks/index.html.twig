{% block body %}
    <h1>Racks</h1>
    <a href="{{ path('racks_new') }}"><button type="button" class="btn btn-dark mb-2">Create new</button></a>
    <table class="table table-dark table-hover table-striped" id="racks-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Row_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rack in racks %}
            <tr>
                <td>{{ rack.id }}</td>
                <td>{{ rack.rowId }}</td>
                <td>
                    <a href="{{ path('racks_show', {'id': rack.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                    <a href="{{ path('racks_edit', {'id': rack.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>
                    {{ include('racks/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
