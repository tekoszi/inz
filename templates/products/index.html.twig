{% block body %}
    <div id="product-index">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Availability</h1>
        <a href="{{ path('products_new') }}"><button type="button" class="btn btn-dark mb-1">Create new</button></a>
        <table  class="table table-dark table-striped table-bordered" id="products-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Barcode</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Warehouse_id</th>
                    <th>Row_id</th>
                    <th>Rack_id</th>
                    <th>Shelf_id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.barcode }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.warehouseId }}</td>
                    <td>{{ product.rowId }}</td>
                    <td>{{ product.rackId }}</td>
                    <td>{{ product.shelfId }}</td>
                    <td>
                        <a href="{{ path('products_show', {'id': product.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('products_edit', {'id': product.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>
                            {{ include('products/_delete_form.html.twig') }}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
