{% block body %}
    <h1>Shelfs</h1>
    <a href="{{ path('shelfs_new') }}"><button type="button" class="btn btn-dark mb-2">Create new</button></a>
    <table class="table table-dark table-hover table-striped" id="shelfs-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rack_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shelf in shelfs %}
            <tr>
                <td>{{ shelf.id }}</td>
                <td>{{ shelf.rackId }}</td>
                <td>
                    <a href="{{ path('shelfs_show', {'id': shelf.id}) }}"><button type="button" class="btn btn-dark mb-1">Show</button></a>
                    <a href="{{ path('shelfs_edit', {'id': shelf.id}) }}"><button type="button" class="btn btn-dark mb-1">Edit</button></a>
                    {{ include('shelfs/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
